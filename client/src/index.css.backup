@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --background: hsl(0, 0%, 3%);
  --foreground: hsl(0, 0%, 98%);
  --card: hsl(0, 0%, 6%);
  --card-foreground: hsl(0, 0%, 95%);
  --popover: hsl(0, 0%, 4%);
  --popover-foreground: hsl(0, 0%, 98%);
  --primary: hsl(0, 0%, 98%);
  --primary-foreground: hsl(0, 0%, 3%);
  --secondary: hsl(0, 0%, 8%);
  --secondary-foreground: hsl(0, 0%, 95%);
  --muted: hsl(0, 0%, 8%);
  --muted-foreground: hsl(0, 0%, 65%);
  --accent: hsl(0, 0%, 8%);
  --accent-foreground: hsl(0, 0%, 95%);
  --destructive: hsl(0, 84%, 60%);
  --destructive-foreground: hsl(0, 0%, 98%);
  --border: hsl(0, 0%, 14%);
  --input: hsl(0, 0%, 14%);
  --ring: hsl(0, 0%, 98%);
  --chart-1: hsl(0, 0%, 98%);
  --chart-2: hsl(0, 0%, 8%);
  --chart-3: hsl(0, 0%, 65%);
  --chart-4: hsl(0, 0%, 14%);
  --chart-5: hsl(0, 84%, 60%);
  --sidebar: hsl(0, 0%, 3%);
  --sidebar-foreground: hsl(0, 0%, 98%);
  --sidebar-primary: hsl(0, 0%, 98%);
  --sidebar-primary-foreground: hsl(0, 0%, 3%);
  --sidebar-accent: hsl(0, 0%, 8%);
  --sidebar-accent-foreground: hsl(0, 0%, 95%);
  --sidebar-border: hsl(0, 0%, 14%);
  --sidebar-ring: hsl(0, 0%, 98%);
  --font-sans: Inter, system-ui, sans-serif;
  --font-serif: Georgia, serif;
  --font-mono: Menlo, monospace;
  --radius: 0.5rem;
}

.light {
  --background: hsl(0, 0%, 100%);
  --foreground: hsl(0, 0%, 0%);
  --card: hsl(0, 0%, 100%);
  --card-foreground: hsl(0, 0%, 0%);
  --popover: hsl(0, 0%, 100%);
  --popover-foreground: hsl(0, 0%, 0%);
  --primary: hsl(0, 0%, 0%);
  --primary-foreground: hsl(0, 0%, 100%);
  --secondary: hsl(210, 40%, 96%);
  --secondary-foreground: hsl(0, 0%, 0%);
  --muted: hsl(210, 40%, 96%);
  --muted-foreground: hsl(215, 16%, 47%);
  --accent: hsl(210, 40%, 96%);
  --accent-foreground: hsl(0, 0%, 0%);
  --destructive: hsl(0, 84%, 60%);
  --destructive-foreground: hsl(0, 0%, 100%);
  --border: hsl(214, 32%, 91%);
  --input: hsl(214, 32%, 91%);
  --ring: hsl(0, 0%, 0%);
  --chart-1: hsl(0, 0%, 0%);
  --chart-2: hsl(210, 40%, 96%);
  --chart-3: hsl(215, 16%, 47%);
  --chart-4: hsl(214, 32%, 91%);
  --chart-5: hsl(0, 84%, 60%);
  --sidebar: hsl(0, 0%, 100%);
  --sidebar-foreground: hsl(0, 0%, 0%);
  --sidebar-primary: hsl(0, 0%, 0%);
  --sidebar-primary-foreground: hsl(0, 0%, 100%);
  --sidebar-accent: hsl(210, 40%, 96%);
  --sidebar-accent-foreground: hsl(0, 0%, 0%);
  --sidebar-border: hsl(214, 32%, 91%);
  --sidebar-ring: hsl(0, 0%, 0%);
}

@layer base {
  * {
    @apply border-border;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    @apply bg-background text-foreground font-sans antialiased;
    font-family: var(--font-sans);
  }
}

@layer utilities {
  .bg-gradient-radial {
    background: radial-gradient(ellipse at center, var(--tw-gradient-stops));
  }
  
  .glass-card {
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }
  
  .glass-card-light {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
  }
  
  .glass-card-subtle {
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.1);
  }
  
  @keyframes textShine {
    0% {
      background-position: -200% 50%;
    }
    100% {
      background-position: 200% 50%;
    }
  }
  
  .shine-text {
    background: linear-gradient(
      90deg,
      #888888 0%,
      #888888 30%,
      #ffffff 50%,
      #888888 70%,
      #888888 100%
    );
    background-size: 200% 100%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    animation: textShine 3s ease-in-out infinite;
    display: inline-block;
  }
}

/* Boat floating animation - like a boat gently rocking on water */
@keyframes boat-float {
  0%, 100% {
    transform: translateY(0px) rotateZ(0deg);
  }
  16% {
    transform: translateY(-8px) rotateZ(0.5deg);
  }
  33% {
    transform: translateY(-6px) rotateZ(-0.3deg);
  }
  50% {
    transform: translateY(-12px) rotateZ(0.8deg);
  }
  66% {
    transform: translateY(-4px) rotateZ(-0.5deg);
  }
  83% {
    transform: translateY(-10px) rotateZ(0.3deg);
  }
}

/* Swimming effect - gentle floating animation */
@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  25% {
    transform: translateY(-8px) rotate(0.5deg);
  }
  50% {
    transform: translateY(-4px) rotate(0deg);
  }
  75% {
    transform: translateY(-12px) rotate(-0.5deg);
  }
}

/* Shining effect - light sweep from left to right every 5 seconds */
@keyframes shine {
  0% {
    transform: translateX(-100%) skewX(-12deg);
  }
  20% {
    transform: translateX(-100%) skewX(-12deg);
  }
  30% {
    transform: translateX(100%) skewX(-12deg);
  }
  100% {
    transform: translateX(100%) skewX(-12deg);
  }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.animate-boat-float {
  animation: boat-float 4s ease-in-out infinite;
}

.animate-shine {
  animation: shine 5s ease-in-out infinite;
}

/* Custom brand name styling */
.brand-name {
  font-family: 'Handlee', cursive;
  font-size: 1.8rem;
  font-weight: 400;
  transition: opacity 0.5s ease-in-out;
}

.brand-name.fade-out {
  opacity: 0;
}

.brand-name.fade-in {
  opacity: 1;
}

/* Flip Card Animation */
.flip-card {
  perspective: 1000px;
  cursor: pointer;
}

.flip-card-inner {
  transition: transform 0.8s ease-in-out;
  transform-style: preserve-3d;
}

.flip-card:hover .flip-card-inner {
  transform: rotateY(180deg);
}

.flip-card-front,
.flip-card-back {
  backface-visibility: hidden;
  border-radius: 1rem;
  overflow: hidden;
}

.flip-card-back {
  transform: rotateY(180deg);
}

/* Additional hover effects for the flip card */
.flip-card:hover {
  transform: scale(1.02);
  box-shadow: 0 20px 40px rgba(96, 165, 250, 0.15);
}
